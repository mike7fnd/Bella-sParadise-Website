      window.addEventListener('orientationchange', tidy, { passive: true });
    })();

    // GSAP Animations for Home Page
    document.addEventListener('DOMContentLoaded', () => {
      // Register ScrollTrigger
      gsap.registerPlugin(ScrollTrigger);

      // Page fade-in
      gsap.from('.site', {
        opacity: 0,
        duration: 1,
        ease: 'power2.out'
      });

      // Hero headline fade-in
      gsap.from('.headline', {
        opacity: 0,
        y: 50,
        duration: 1.2,
        delay: 0.2,
        ease: 'power2.out'
      });

      // Subhead fade-in with delay
      gsap.from('.subhead', {
        opacity: 0,
        y: 30,
        duration: 1,
        delay: 0.3,
        ease: 'power2.out'
      });

      // Reservation bar slide-in
      gsap.from('.reservation', {
        opacity: 0,
        y: 40,
        duration: 0.8,
        delay: 0.6,
        ease: 'power2.out'
      });

      // Tiles stagger animation on scroll
      gsap.from('.tile', {
        opacity: 0,
        y: 60,
        duration: 0.8,
        stagger: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.tiles',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Quote band animation on scroll
      gsap.from('.quote', {
        opacity: 0,
        scale: 0.9,
        duration: 1,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.quoteband',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Rooms grid stagger on scroll
      gsap.from('.room-card', {
        opacity: 0,
        y: 50,
        duration: 0.8,
        stagger: 0.15,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.room-grid',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Instagram strip fade-in on scroll
      gsap.from('.insta img', {
        opacity: 0,
        scale: 0.8,
        duration: 0.6,
        stagger: 0.1,
        ease: 'back.out(1.7)',
        scrollTrigger: {
          trigger: '.insta-strip',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });
    });
  </script>

  <!-- Cookie Consent Popup -->
  <div id="cookie-popup" class="cookie-popup">
    <div class="cookie-content">
      <h3>Cookie Consent</h3>
      <p>We use cookies to enhance your experience on our website. By continuing to browse, you agree to our use of
        cookies.</p>
      <div class="cookie-buttons">
        <button class="cookie-accept">Accept</button>
        <button class="cookie-decline">Decline</button>
      </div>
    </div>
  </div>



  <script>
    // Cookie Consent Logic
    document.addEventListener('DOMContentLoaded', () => {
      const cookiePopup = document.getElementById('cookie-popup');
      const acceptBtn = document.querySelector('.cookie-accept');
      const declineBtn = document.querySelector('.cookie-decline');

      // Check if user has already made a choice
      const cookieChoice = localStorage.getItem('cookieConsent');
      if (!cookieChoice) {
        // Show popup if no choice made
        cookiePopup.classList.add('active');
      }

      // Accept cookies
      acceptBtn.addEventListener('click', () => {
        localStorage.setItem('cookieConsent', 'accepted');
        cookiePopup.classList.remove('active');
      });

      // Decline cookies
      declineBtn.addEventListener('click', () => {
        localStorage.setItem('cookieConsent', 'declined');
        cookiePopup.classList.remove('active');
      });
    });
  </script>

  <script>
    // Variables to store selected dates
    let checkIn = null;
    let checkOut = null;

    // Open modal
    document.querySelector('.res-check').addEventListener('click', () => {
      document.getElementById('availability-modal').classList.add('active');
      document.body.style.overflow = 'hidden';
    });

    // Close modal
    document.getElementById('availability-modal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('availability-modal') || e.target.classList.contains('modal-close')) {
        document.getElementById('availability-modal').classList.remove('active');
        document.body.style.overflow = '';
      }
    });

    // Inline Calendar (always visible)
    const calendar = flatpickr("#inline-calendar", {
      inline: true,
      mode: "range",
      minDate: "today",
      dateFormat: "M j, Y",
      theme: "dark",
      onChange: function (selectedDates) {
        if (selectedDates.length === 2) {
          checkIn = selectedDates[0];
          checkOut = selectedDates[1];

          // Update the reservation bar text
          document.getElementById('selected-dates').textContent =
            `${flatpickr.formatDate(checkIn, "M j")} – ${flatpickr.formatDate(checkOut, "M j, Y")}`;
        }
      }
    });

    // Continue Booking → Save & Redirect
    document.getElementById('continue-booking').addEventListener('click', () => {
      if (!checkIn || !checkOut) {
        alert("Please select both check-in and check-out dates.");
        return;
      }

      // Save to sessionStorage
      sessionStorage.setItem('bookingCheckIn', checkIn.toISOString().split('T')[0]);
      sessionStorage.setItem('bookingCheckOut', checkOut.toISOString().split('T')[0]);
      sessionStorage.setItem('bookingAdults', document.getElementById('adult-count')?.textContent || '1');
      sessionStorage.setItem('bookingChildren', document.getElementById('child-count')?.textContent || '0');

      // Redirect
      window.location.href = "/login";   // Change to "/book" if user is already logged in
    });
  </script>


