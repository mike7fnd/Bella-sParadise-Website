<!doctype html>
<html lang="en">

<head>


  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Bela's Paradise Resort</title>


  <!-- Fonts chosen to visually match the design: Great Vibes for logo/nature beauty, Montserrat for headings/body -->
<link
  href="https://fonts.googleapis.com/css2?family=Archivo:wght@50;100;200;300;400;500;600;700&family=Playfair+Display:wght@300;400;500;600;700;800;900&display=swap"
  rel="stylesheet">
  <!-- Styles (reservation UI removed) -->
  <style>

    :root {
  /* Base font: Archivo only + solid system fallbacks */
  --base-font: "Archivo", sans-serif;
 /* Logo font: Playfair Display only */
  --logo-font: "Playfair Display", serif;
      --bg-light: #f1f1f1;
      --panel-light: rgba(250, 245, 245, 0.92);
      --text: #ffffff;
      --muted: #ffffff;
      --accent: #e6a8ce;
      --white: #ffffff;
      --glass: rgba(255, 255, 255, 0.68);
      --radius: 20px;
      --shadow-1: 0 8px 32px rgba(0, 0, 0, 0.09);
      --max-width: 1400px;
      font-size: 16px;
    }



    * {
      box-sizing: border-box;
    }

    html,
    body {
      height: 100%;
    }

    body {
      margin: 0;
      color: var(--text);
      background: var(--bg-light);
      font-family: var(--base-font);
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      line-height: 1.35;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    .site {
      width: 100%;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      width: 100%;
      position: relative;
      color: var(--text);
    }


.hero {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    position: relative;
    display: block;
    box-sizing: border-box;
}


    .hero-inner {
      position: relative;
      overflow: hidden;
      /* only round the bottom-left and bottom-right corners */
      border-radius: 0 0 60px 60px;
      margin: 0 auto;
    }

    /* Background image (embedded as data URI) */
    .hero-bg {

      width: 100%;
      /* enforce a 16:9 landscape hero — larger on desktop */
      aspect-ratio: 16/9;
      min-height: 500px;
      max-height: 100vh;
      background-image:
        linear-gradient(180deg, rgba(34, 26, 20, 0.336), rgba(21, 17, 14, 0.178)),
        url("https://images.pexels.com/photos/27429680/pexels-photo-27429680.jpeg");
      background-size: cover;
      background-position: center 18%;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      position: relative;
    }

    .hero-content {
      width: 100%;
      max-width: var(--max-width);
      padding: 33px 26px;
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    .headline {
  font-family: var(--logo-font);
  font-style: italic;
  font-size: clamp(5rem, 8vw, 7rem);     /* balik mo sa original kung gusto mo mas malaki */
  font-weight: 400;
  color: var(--white);
  margin: 0 0 0.7rem 0;                  /* alisin yung left/right margin kung ayaw mo */
  text-shadow: 0 4px 12px rgba(0, 0, 0, .6);
  line-height: 1;
}

.subhead {
  color: var(--muted);
  font-size: 4rem;
  max-width: 64ch;
  margin: 0 0 -50px 0;       /* negative bottom margin para mag-overlap sa headline */
  text-align: left;        /* o inherit/left/right depende sa design mo */
  font-weight: 50;
  letter-spacing: 0.08em;
  text-transform: lowercase;
}

    /* Reservation overlay bar (centered horizontally) */
    .reservation {
      margin-top: 18px;
      background: linear-gradient(90deg, rgba(255, 255, 255, 0.035), rgba(0, 0, 0, 0.06));
      border-radius: 30px;
      padding: 12px;
      display: flex;
      align-items: center;
      gap: 12px;
      width: min(980px, 92%);
      margin-left: auto;
      margin-right: auto;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.45);
      backdrop-filter: blur(6px);
      border: 1px solid rgba(255, 255, 255, 0.04);
    }

    .reservation .left {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 6px
    }

    .reservation small {
      color: var(--muted);
      font-size: 0.82rem
    }

    .reservation .date {
      font-weight: 400
    }

    .res-controls {
      display: flex;
      gap: 12px;
      align-items: center
    }

    .res-ctrl {
      display: flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 255, 255, 0.02);
      padding: 10px;
      border-radius: 10px;
      min-width: 80px;
      justify-content: space-between
    }

    .res-ctrl button {
      background: transparent;
      border: none;
      color: var(--muted);
      font-weight: 400;
      font-size: 1rem;
      padding: 6px;
      cursor: pointer
    }

    .res-check {
      background: #ffffff;
      border: none;
      padding: 10px 14px;
      border-radius: 30px;
      color: #111;
      font-weight: 600;
      cursor: pointer;
      min-width: 120px
    }

    .res-check:focus {
      outline: 3px solid rgba(189, 165, 137, 0.25)
    }

    .tiles {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
      width: 100%;
      max-width: var(--max-width);
      margin: 18px auto;
      padding: 0 20px;
    }

   .tile {
  position: relative;
  aspect-ratio: 9/13;
  background: var(--glass);
  border-radius: 40px;
  overflow: hidden;
  min-height: 280px;
  border: 1px solid rgba(0, 0, 0, 0.06);
  box-shadow: var(--shadow-1);
}

.tile .caption {
  position: absolute;
  left: 50%;
  bottom: 12px;                    /* distance from bottom */
  transform: translateX(-50%);     /* perfect horizontal centering */
  color: var(--text);
  font-weight: 200;
  font-size: 2rem;
  white-space: nowrap;            /* para hindi mag-break ang single-line title */


}

    .quoteband {
      width: 100%;
      background: rgba(214, 214, 214, 0.97);
      padding: 42px 12px;
      display: flex;
      justify-content: center;
    }

    .quote {
      max-width: 980px;
      text-align: center;
      color: #000000;;
      font-size: 1.5rem;
      font-weight: 400;
      line-height: 1.4;

    }

.rooms-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 12px;
}

.rooms-header h2 {
  margin: 0;
  font-size: 2.5rem;           /* much larger heading */
  font-weight: 300;
  color: #111;
  line-height: 1.1;
}

.explore-link {
  font-size: 1.3rem;          /* larger link text */
  font-weight: 300;
  color: #000000;          /* nice blue */
  text-decoration: none;      /* no line at all */
  white-space: nowrap;
  transition: color 0.3s ease;
}

.explore-link:hover {
  color: #e6187f;              /* slightly darker on hover */
  text-decoration: none;      /* still no line */
}

.explore-link::after {
  content: " →";
  margin-left: 4px;
  opacity: 0.8;
}

/* Optional: slightly smaller on mobile */
@media (max-width: 640px) {
  .explore-link {
    font-size: 0.95rem;
  }
}

    .rooms {
      width: 100%;
      max-width: var(--max-width);
      padding: 28px 20px;
      margin: 8px auto 28px;
    }

    .rooms h2 {
      background: #000000;
      color: #ffffff;
      display: inline-block;
      padding: 12px 24px;
      border-radius: 999px;
      font-weight: 300;
      margin: 0 0 24px;
      font-size: 1.5rem;
    }

    .room-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }

 .room-card {
  position: relative;
  aspect-ratio: 4/3;
  background: var(--glass);
  border-radius: 30px;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
  padding: 16px;
  min-height: 280px;
  border: 1px solid rgba(0, 0, 0, 0.06);
  box-shadow: var(--shadow-1);
  cursor: default;
}

/* Dark fade from bottom to top */
.room-card::before {
  content: "";
  position: absolute;
  inset: 0;                     /* covers the entire card */
  border-radius: 30px;          /* match parent roundness */
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.589) 0%,     /* strong black at bottom */
    rgba(0, 0, 0, 0.233) 20%,
    rgba(0, 0, 0, 0) 100%      /* fully transparent at top */
  );
  pointer-events: none;         /* doesn’t block clicks */
  z-index: 1;
}

/* Ensure content (text, buttons, etc.) stays above the fade */
.room-card > * {
  position: relative;
  z-index: 2;
}

.heart-icon {
  position: absolute;
  top: 18px;
  right: 18px;
  width: 56px;           /* much bigger */
  height: 56px;          /* much bigger */

  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 10;
  transition: all 0.3s ease;

}

.heart-icon:hover {
  transform: scale(1.12);
  background: rgba(0, 0, 0, 0.4);
}

.heart-icon svg {
  width: 32px;           /* bigger icon inside */
  height: 32px;
  transition: all 0.3s ease;
}

.heart-icon.liked svg path {
  fill: white;           /* filled white when liked */
  stroke: white;
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.5); }
}

    .room-card .meta {
      color: var(--text);
      font-weight: 300;
      font-size: 1.8rem;
    }

    .room-card small {
      display: block;
      font-weight: 200;
      color: var(--muted);
      font-size: 0.85rem;
      margin-top: -2px;
    }

    .insta {
      width: 100%;
      max-width: var(--max-width);
      padding: 18px 20px;
      display: flex;
      gap: 8px;
      overflow-x: auto;
      scrollbar-width: none;
    }

    .insta img {
      width: 72px;
      height: 72px;
      object-fit: cover;
      border-radius: 15px;
      border: 1px solid rgba(0, 0, 0, 0.08);
      flex-shrink: 0;
    }

      .cookie-popup {
      position: fixed;
      inset: 0;
      background: rgba(255, 255, 255, 0.92);
      backdrop-filter: blur(12px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 2000;
      padding: 1rem;
    }

    .cookie-popup.active {
      display: flex;
    }

    .cookie-content {
      background: #fff;
      border-radius: 30px;
      max-width: 500px;
      width: 100%;
      border: 1px solid rgba(0, 0, 0, 0.08);
      padding: 2rem;
      text-align: center;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }

    .cookie-content h3 {
      font-size: 1.5rem;
      margin: 0 0 1rem;
      color: var(--text);
    }

    .cookie-content p {
      font-size: 1rem;
      line-height: 1.6;
      color: var(--muted);
      margin: 0 0 1.5rem;
    }

    .cookie-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .cookie-accept,
    .cookie-decline {
      padding: .75rem 1.5rem;
      border-radius: 30px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      transition: all .2s;
    }

    .cookie-accept {
      background: var(--accent);
      color: #fff;
      border: none;
    }

    .cookie-accept:hover {
      background: #a89276;
    }

    .cookie-decline {
      background: rgba(0, 0, 0, 0.08);
      color: var(--text);
      border: none;
    }

    .cookie-decline:hover {
      background: rgba(0, 0, 0, 0.14);
    }

    /* Responsive */
    @media (max-width:1100px) {

      .room-grid,
      .tiles {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width:720px) {
      .reservation {
        flex-direction: column;
        align-items: stretch;
      }

      .res-controls {
        justify-content: space-between;
      }

      .tiles,
      .room-grid {
        grid-template-columns: 1fr;
      }

      .hero-bg {
        background-position: center 12%;
        /* smaller hero on mobile — keep visually balanced */
        height: 36vh;
        max-height: none;
      }

      .headline {
        font-size: 2.8rem;
      }

      .topbar {
        font-size: 0.78rem;
        padding: 6px;
      }
    }

    button:focus,
    a:focus {
      outline: 3px solid rgba(189, 165, 137, 0.3);
      outline-offset: 3px;
    }

  </style>
</head>

